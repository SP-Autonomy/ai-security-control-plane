# AI Security Control Plane - Environment Configuration
# Copy this file to .env and update with your values

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
DEBUG=false

# =============================================================================
# GATEWAY CONFIGURATION
# =============================================================================
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8001

# =============================================================================
# AGENT RUNTIME CONFIGURATION
# =============================================================================
AGENT_HOST=0.0.0.0
AGENT_PORT=8002

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=sqlite:///./control_plane.db

# =============================================================================
# LLM PROVIDERS (Choose one or multiple)
# =============================================================================
# OpenAI
OPENAI_API_KEY=sk-your-key-here
OPENAI_MODEL=gpt-4

# Anthropic
ANTHROPIC_API_KEY=sk-ant-your-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Ollama (Local - No API key needed)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# =============================================================================
# OBSERVABILITY & TRACING
# =============================================================================
TRACING_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=ai-security-control-plane

# Jaeger (Optional - for trace visualization)
JAEGER_ENDPOINT=http://localhost:14268
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# =============================================================================
# POLICY ENGINE (OPA)
# =============================================================================
OPA_URL=http://localhost:8181
OPA_POLICY_PATH=/v1/data

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# PII Redaction
PII_REDACTION_ENABLED=true
PII_CATEGORIES=SSN,CREDIT_CARD,EMAIL,PHONE,US_PASSPORT

# DLP
DLP_ENABLED=true
DLP_DENY_ON_MATCH=false

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:8501"]

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================
# Default budgets
DEFAULT_AGENT_BUDGET=100
DEFAULT_TOOL_TIMEOUT=30

# Memory settings
DEFAULT_MEMORY_SCOPE=buffer
MAX_MEMORY_TOKENS=4000

# =============================================================================
# EVALUATION CONFIGURATION
# =============================================================================
EVAL_TIMEOUT_SECONDS=300
EVAL_MAX_PARALLEL=5

# =============================================================================
# POSTURE SCORING WEIGHTS
# =============================================================================
POSTURE_REGISTRY_WEIGHT=20
POSTURE_TOOLS_WEIGHT=20
POSTURE_TRACING_WEIGHT=20
POSTURE_DLP_WEIGHT=20
POSTURE_POLICY_WEIGHT=20

# =============================================================================
# UI CONFIGURATION
# =============================================================================
UI_API_URL=http://localhost:8000
UI_AUTO_REFRESH_SECONDS=30

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================
# Slack notifications
SLACK_WEBHOOK_URL=

# Email alerts
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
ALERT_EMAIL=

# =============================================================================
# DEVELOPMENT FLAGS
# =============================================================================
MOCK_LLM_RESPONSES=true
SKIP_OPA_VALIDATION=false
